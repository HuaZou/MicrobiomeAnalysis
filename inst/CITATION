citHeader("To cite package 'MicrobiomeAnalysis' in publications use:")


year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(
  bibtype = "Unpublished",
  title = "{MicrobiomeAnalysis}: An R package for analysis and visualization in metagenomics",
  author = person("Hua", "Zou", email="zouhua1@outlook.com"),
  year = year,
  note = note,
  url = "https://github.com/HuaZou/MicrobiomeAnalysis/")
  textVersion = paste0("Hua Zou, (", year, ").",
  " MicrobiomeAnalysis: Data analysis toolkits. ",
  note, ".",
  " https://github.com/HuaZou/MicrobiomeAnalysis/"
)
